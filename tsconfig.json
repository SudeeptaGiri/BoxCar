{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "strict": true,
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],  
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],  
  "exclude": ["dist", "node_modules"]
}
